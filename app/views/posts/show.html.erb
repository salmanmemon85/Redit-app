<div class="post-section">
<div class="container">
<div class="row justify-content-center">
<div class="col-lg-6">

<p id="notice"><%= notice %></p>

<div class="post-area">
    <%= @post.user.name %>
      <div class="img-area">
          <%= image_tag @post.post_image.thumb.url if @post.post_image.present? %>
      </div>
      <h2><%= @post.title %></h2>
        <h3><%= @post.name %></h3>
        <p><%= @post.description %></p>
        <div class="d-flex justify-content-between btn-area">
        <%= link_to 'Show', @post, class: "btn-a  btn btn-primary" %>
        <%= link_to 'Edit', edit_post_path(@post), class: "btn-a btn btn-warning" %>
        <%= link_to 'Back', posts_path, class: "btn-a btn btn-dark" %>
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-a btn btn-danger" %>
        </div>
<%= render  "comments/form" %>

<div id="comments">
   <%= render  @comments %>
</div>
</div>


</div>
</div>
</div>
</div>