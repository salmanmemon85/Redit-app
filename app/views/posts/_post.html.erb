<div class="post-section">
<div class="container">
<div class="row justify-content-center">
<div class="col-lg-6">
<p id="notice"><%= notice %></p>

    <% @posts.each do |post| %>
<div class="post-area">
    <%= post.user.name %>
      <div class="img-area">
          <%= image_tag post.post_image.thumb.url if post.post_image.present? %>
      </div>
      <h2><%= post.title %></h2>
        <h3><%= post.name %></h3>
        <p class="para"><%= post.description %></p>
        <div class="d-flex justify-content-end btn-area">
        <%= link_to 'Show', post, class: "btn-a btn-b btn btn-primary" %>
        <%= link_to 'Edit', edit_post_path(post), class: "btn-a btn-c btn btn-warning" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-a btn btn-danger" %>
        </div>
</div>
    <% end %>
</div>
</div>
</div>
</div>
